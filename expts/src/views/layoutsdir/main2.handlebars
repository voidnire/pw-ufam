<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css'
      rel='stylesheet'
    />
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css'
    />

  

    <!--ADIÇÃO PRA LISTAGEM DE CURSOS-->

    <link
      href='https://getbootstrap.com/docs/5.3/assets/css/docs.css'
      rel='stylesheet'
    />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css'
      rel='stylesheet'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='/css/styles.css' />

    <title>Trabalho Final</title>
    <script
      defer
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js'
    ></script>
    <title>ExpTS</title>
  </head>

  <body class='p-3 m-0 border-0 bd-example m-0 border-0'>

    <header>
      <nav class='navbar navbar-expand-lg navbar-light bg-light'>
        <a class='navbar-brand' href='/'>TrabalhoFinalPw</a>
        <button
          class='navbar-toggler'
          type='button'
          data-bs-toggle='collapse'
          data-bs-target='#navbarNavDropdown'
          aria-controls='navbarNavDropdown'
          aria-expanded='false'
          aria-label='Toggle navigation'
        >
          <span class='navbar-toggler-icon'></span>
        </button>
         {{#if isAuthenticated}}
        <div class='collapse navbar-collapse' id='navbarNavDropdown'>
          <ul class='navbar-nav'>
            <li class='nav-item active'>
              <a class='nav-link' href='/'>Home
                <span class='sr-only'>(current)</span>
              </a>
            </li>
            <li class='nav-item'>
              <a class='nav-link' href='/sobre'>Sobre</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link' href='/game'>Jogar</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link' href='/ranking'>Ranking</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link' href='/major'>Cursos</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link' href='/user'>Usuários</a>
            </li>
            </ul>

            <ul class='navbar-nav ms-auto'>

            <li class='nav-item dropdown ms-auto'>
              <a
                class='nav-link dropdown-toggle'
                href='#'
                id='navbarDropdownMenuLink'
                data-bs-toggle='dropdown'
                aria-haspopup='true'
                aria-expanded='false'
              >
                {{userName}}
              </a>
              <div
                class='dropdown-menu '
                aria-labelledby='navbarDropdownMenuLink'
              >
                <a class='dropdown-item' href='/logout'>Efetuar Logout</a>
                <a class='dropdown-item' href='/hb2'>Alterar dados cadastrais</a>
                <a class='dropdown-item' href='/hb3'>Alterar senha</a>
              </div>
            </li>
  </ul>

            {{else}}
      

            <ul class='navbar-nav '> 
                    <li class='nav-item'>
                          <a class='nav-link' href='/sobre'>Sobre</a>
                </li>

            <li class='nav-item dropdown'>
              <a
                class='nav-link dropdown-toggle'
                href='#'
                id='navbarDropdownMenuLink'
                data-bs-toggle='dropdown'
                aria-haspopup='true'
                aria-expanded='false'
              >
                HBs
              </a>
              <div
                class='dropdown-menu'
                aria-labelledby='navbarDropdownMenuLink'
              >
                <a class='dropdown-item' href='/hb1'>HB1</a>
                <a class='dropdown-item' href='/hb2'>HB2</a>
                <a class='dropdown-item' href='/hb3'>HB3</a>
                <a class='dropdown-item' href='/hb4'>HB4</a>
              </div>
            </li>
</ul>
<!--BOTÕES-->
            <ul class='navbar-nav ms-auto'>

            <button
            type='button'
            class='btn btn-outline-success my-2 my-sm-0 ms-auto d-flex'
            onclick="window.location.href='/cadastro';"
          >
            Criar Conta
          </button>
          <button
            type='button'
            class='btn btn-outline-success my-2 my-sm-0 ms-auto d-flex'
            onclick="window.location.href='/login';"
          >
            Login
          </button>    
          </ul>   
        </div>
      </nav>
      {{/if}}
    </header>

    <main> {{{body}}}</main>

    <footer>
      <div>
      </div>
      <div>
      </div>
    </footer>
