<div class='major-header'>
  <h1>Listagem de Cursos</h1>

  <i class='fas fa-add icon' onclick='displayForm()'></i>
</div>

<div id='modal-criar'>
  <div id='modalContent-criar'>
    <form id='createMajorForm'>
      <label for='name'>Nome do Curso:</label>
      <input type='text' id='name' name='name' /><br /><br />

      <label for='code'>Código do Curso:</label>
      <input type='text' id='code' name='code' /><br /><br />

      <label for='description'>Descrição:</label>
      <textarea id='description' name='description'></textarea><br /><br />

      <div class='modal-buttons'>
        <button onclick='closeModal()'>Fechar</button>
        <button type='submit'>Criar Curso</button>

      </div>
    </form>

  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Código</th>
      <th>Nome</th>
      <th>Opções</th>
    </tr>
  </thead>
  <tbody>

    {{#each majors}}

      <div id='modal'>
        <div id='modalContent'>
          <div class='modal-header'>
            Confirmar Deleção
          </div>
          <p id='confirmationMessage'></p>
          <div class='modal-buttons'>
            <button onclick='closeModal()'>Fechar</button>
            <button onclick='deletarCurso("{{id}}")'>Sim, Apagar Curso</button>
          </div>
        </div>
      </div>

      <tr>
        <td>{{id}}</td>

        <td>{{code}}</td>
        <td>{{name}}</td>
        <td>
          <i class='fas fa-pencil-alt icon'></i>
          <i class='fas fa-eye icon'></i>
          <i
            class='fas fa-trash-alt icon'
            onclick='confirmDeletar("{{id}}","{{name}}")'
          ></i>
        </td>
      </tr>
    {{/each}}

  </tbody>
</table>

