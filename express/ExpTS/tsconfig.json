{
  "compilerOptions": {
    "target": "ES6",
    "rootDir": "src",
    "outDir": "build",     
    "module": "ESNext",                         
    "esModuleInterop": true,          
    "moduleResolution": "node",                  
    "forceConsistentCasingInFileNames": true,            
  "allowSyntheticDefaultImports": true,
    "strict": true,             
    "skipLibCheck": true          
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
